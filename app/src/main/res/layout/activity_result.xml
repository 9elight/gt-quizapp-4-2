<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.result.ResultActivity">

    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpro_bold"
        android:text="@string/result"
        android:textSize="@dimen/middle_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/tv_category_marginTop"/>
    <ImageView
        android:id="@+id/result_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/result_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/tv_category_marginTop"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/result_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/result_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="52dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="17dp"
        >
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="22dp"
           android:paddingBottom="62dp"
           android:paddingHorizontal="26dp">
           <TextView
               android:id="@+id/result_category"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:text="Category: Mixed"
               android:textSize="@dimen/middle_text_size"
               android:fontFamily="@font/sfpro_bold"
               />
           <TextView
               android:id="@+id/result_difficulty"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Difficulty:"
               app:layout_constraintTop_toBottomOf="@id/result_category"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="@dimen/result_category_tittle_margin"
               />
           <TextView
               android:id="@+id/result_category_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="All"
               app:layout_constraintTop_toBottomOf="@id/result_difficulty"
               app:layout_constraintStart_toStartOf="@id/result_difficulty"
               app:layout_constraintEnd_toEndOf="@id/result_difficulty"
               android:layout_marginTop="5dp"/>
           <TextView
               android:id="@+id/correct_answers"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Correct Answers:"
               app:layout_constraintTop_toBottomOf="@id/result_category"
               app:layout_constraintStart_toStartOf="@id/result_category"
               app:layout_constraintEnd_toEndOf="@id/result_category"
               android:layout_marginTop="@dimen/result_category_tittle_margin"
               />
           <TextView
               android:id="@+id/correct_answers_amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="8/10"
               app:layout_constraintTop_toBottomOf="@id/result_difficulty"
               app:layout_constraintStart_toStartOf="@id/correct_answers"
               app:layout_constraintEnd_toEndOf="@id/correct_answers"
               android:layout_marginTop="5dp"/>
           <TextView
               android:id="@+id/result_percent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Result:"
               app:layout_constraintTop_toBottomOf="@id/result_category"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="@dimen/result_category_tittle_margin"
               />
           <TextView
               android:id="@+id/result_percent_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="80%"
               app:layout_constraintTop_toBottomOf="@id/result_difficulty"
               app:layout_constraintStart_toStartOf="@id/result_percent"
               app:layout_constraintEnd_toEndOf="@id/result_percent"
               android:layout_marginTop="5dp"/>

       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/finish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        app:layout_constraintTop_toBottomOf="@id/result_cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/finish_btn_background"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>